<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_parking_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="1"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/tv_parking_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="12:00 - 13:00"
        android:textColor="@color/colorAccent"
        android:layout_toEndOf="@id/tv_parking_id"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tv_date_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仅一次"
        android:textSize="16sp"
        android:textColor="@color/dark_gray"
        android:layout_below="@id/tv_parking_period"
        android:layout_alignStart="@id/tv_parking_period"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/sc_republish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        />

</RelativeLayout>