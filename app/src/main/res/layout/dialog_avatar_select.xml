<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_avatar_select">

    <TextView
        android:id="@+id/tv_take_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/avatar_photo"
        android:textSize="16sp"
        android:textColor="@color/major_text"
        android:gravity="center_vertical"
        android:paddingStart="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_bord"
        />

    <TextView
        android:id="@+id/tv_gallery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/avatar_gallery"
        android:textSize="16sp"
        android:textColor="@color/major_text"
        android:background="@drawable/bg_dialog_avatar_select_gallery"
        android:gravity="center_vertical"
        android:paddingStart="20dp"/>

</LinearLayout>