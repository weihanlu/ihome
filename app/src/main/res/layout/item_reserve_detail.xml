<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/explore_io_card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    app:cardBackgroundColor="@color/card"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_item_reserve"
            android:layout_width="match_parent"
            android:layout_height="240dp"></android.support.v4.view.ViewPager>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <TextView
                android:id="@+id/tv_item_reserve_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                tools:text="停车时间 15：45"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tv_item_reserve_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="19dp"
                android:layout_below="@id/tv_item_reserve_info"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                tools:text="停车时间 15：45" />

            <Button
                android:id="@+id/btn_item_reserve_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="29dp"
                android:background="@drawable/round_button_green"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:text="车位锁"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/btn_item_reserve_navi" />

            <Button
                android:id="@+id/btn_item_reserve_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button_green"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:text="取消预约"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/btn_item_reserve_function"
                android:layout_marginEnd="30dp" />

            <Button
                android:id="@+id/btn_item_reserve_navi"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_nav"
                android:layout_marginEnd="33dp"
                android:layout_alignBottom="@id/tv_item_reserve_info"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_medium"
            tools:text="Gavan Griffith raises concerns about relationship between George Brandis, Justin Gleeson" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            tools:text="A long-serving former solicitor-general has launched a withering assessment of Attorney-General George Brandis' relationship with the nation's second law officer." />

    </LinearLayout>
</android.support.v7.widget.CardView>
