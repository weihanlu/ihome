<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_reserve_estate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="北京邮电大学科研楼停车场"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/tv_reserve_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="18:45 ~ 19:00"
        android:textSize="18sp"
        android:layout_below="@id/tv_reserve_estate"
        android:layout_margin="16dp"
        />

    <Button
        android:id="@+id/btn_reserve_navi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="导航"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="6dp"
        />

    <Button
        android:id="@+id/btn_reserve_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小区地图"
        android:textSize="14sp"
        android:layout_toStartOf="@id/btn_reserve_navi"
        android:layout_alignBaseline="@id/btn_reserve_navi"
        />

    <Button
        android:id="@+id/btn_reserve_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车位锁"
        android:textSize="14sp"
        android:layout_toStartOf="@id/btn_reserve_map"
        android:layout_alignBaseline="@id/btn_reserve_map"
        android:layout_marginEnd="8dp"
        />

    <TextView
        android:id="@+id/tv_reserve_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$12"
        android:textSize="18sp"
        android:layout_toEndOf="@id/tv_reserve_time"
        android:layout_alignBottom="@id/tv_reserve_time"
        />

    <Button
        android:id="@+id/btn_reserve_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消预约"
        android:textSize="14sp"
        android:layout_below="@id/btn_reserve_navi"
        android:layout_alignEnd="@id/btn_reserve_navi"
        />

    <Button
        android:id="@+id/btn_reserve_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付"
        android:textSize="14sp"
        android:layout_alignBaseline="@id/btn_reserve_cancel"
        android:layout_alignStart="@id/btn_reserve_map"
        />

    <TextView
        android:id="@+id/tv_reserve_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="已取消"
        android:layout_above="@+id/tv_reserve_fee"
        android:layout_alignEnd="@+id/btn_reserve_navi"
        android:layout_marginEnd="61dp" />


</RelativeLayout>
