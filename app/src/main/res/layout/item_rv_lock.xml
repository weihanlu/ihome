<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/selector_item"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/tv_user_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_lock"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_user_lock">

        <RelativeLayout
            android:id="@+id/layout_item_my_parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tv_lock_name"
                tools:text="CrAM_095D28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textColor="@color/major_text" />

            <TextView
                android:id="@+id/tv_rental_status"
                android:layout_width="40dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_lock_name"
                android:background="@drawable/blue_rect_my_parking"
                android:gravity="center"
                android:textColor="@color/theme_start_color"
                android:textSize="9sp"
                tools:text="已租用" />
        </RelativeLayout>



        <TextView
            android:id="@+id/tv_lock_estate_name"
            tools:text="今典花园"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/minor_text"
            android:layout_below="@id/layout_item_my_parking"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@id/layout_item_my_parking"
            />


    </RelativeLayout>


    <Button
        android:id="@+id/bt_connect"
        android:text="@string/device_connect"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/round_button_blue"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        />




</RelativeLayout>