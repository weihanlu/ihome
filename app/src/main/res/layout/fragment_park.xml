<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qhiehome.ihome.fragment.ParkFragment">

    <include layout="@layout/layout_top_park_fragment"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/layout_top" />

    <com.baidu.mapapi.map.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mv_park"
        android:clickable="true"
        android:layout_below="@id/layout_top"
        />

    <Button
        android:id="@+id/btn_map_location"
        android:background="@drawable/btn_location_normal"
        android:textAllCaps="false"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/btn_map_marker"
        android:layout_alignStart="@+id/btn_map_marker"
        android:layout_marginTop="41dp" />

    <Button
        android:id="@+id/btn_map_navi"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_nav"
        android:layout_below="@+id/btn_map_refresh"
        android:layout_alignStart="@+id/btn_map_location"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/btn_map_refresh"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@android:drawable/ic_popup_sync"
        android:layout_below="@+id/btn_map_location"
        android:layout_alignStart="@+id/btn_map_navi"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btn_map_marker"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="167dp"
        android:background="@drawable/btn_numbers_checked" />


</RelativeLayout>
