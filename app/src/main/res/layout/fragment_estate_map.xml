<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_estate_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_remind_info"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="最晚停车时间：22：45"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/black_rect_reserve"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btn_function_1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button_reserve"
        android:elevation="2dp"
        android:text="取消预约"
        android:textColor="@color/major_text"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_function_2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button_reserve"
        android:elevation="2dp"
        android:text="开始停车"
        android:textColor="@color/major_text"
        android:textSize="12sp"
        android:layout_alignBottom="@id/btn_function_1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_function_3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button_reserve"
        android:elevation="2dp"
        android:text="地图导航"
        android:textColor="@color/major_text"
        android:textSize="12sp"
        android:layout_alignBottom="@id/btn_function_2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />


</RelativeLayout>
