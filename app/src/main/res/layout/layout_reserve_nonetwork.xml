<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_reserve_nonetwork"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_reserve_nonetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_no_network"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_reserve_nonetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载失败，请检查网络！"
            android:textSize="16sp"
            android:textColor="@color/sub_text"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_reserve_nonetwork"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btn_nonetwork_function1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/round_long_button_blue"
            android:text="确认离开"
            android:textSize="16sp"
            android:textColor="@color/submit_feedback"
            android:layout_below="@+id/tv_reserve_nonetwork"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/btn_nonetwork_function2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/round_long_button_blue"
            android:text="暂时离开"
            android:textSize="16sp"
            android:textColor="@color/submit_feedback"
            android:layout_below="@+id/btn_nonetwork_function1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

    </RelativeLayout>




</RelativeLayout>
