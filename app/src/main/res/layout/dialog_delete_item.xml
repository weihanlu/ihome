<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="320dp"
    android:layout_height="195dp"
    android:background="@drawable/bg_dialog_delete_item">

    <TextView
        android:id="@+id/tv_delete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66.5dp"
        android:layout_gravity="center_horizontal"
        android:text="确定要删除发布吗 ?"
        android:textSize="16sp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textColor="@color/major_text"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_bord"
        android:layout_marginTop="54dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_quit_callback"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="16sp"
            android:textColor="@color/major_text"
            android:gravity="center"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/button_bord"
            />

        <TextView
            android:id="@+id/tv_sure_callback"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="@color/light_red"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>