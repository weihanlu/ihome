<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="#fff">


    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:text="@string/login_mobile"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        android:layout_marginStart="83dp" />

    <TextView
        android:id="@+id/tv_vertify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_verification"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_phone"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textSize="18sp"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:layout_marginRight="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_vertify"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />
    <!--android:onClick="login"-->

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:ems="10"
        android:textSize="18sp"
        android:textColor="#000"
        android:textCursorDrawable="@null"
        android:background="#FFF"
        android:inputType="phone"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_phone"
        app:layout_constraintLeft_toRightOf="@+id/tv_phone"
        android:layout_marginStart="33dp" />

    <EditText
        android:id="@+id/et_vertify"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:textSize="18sp"
        android:background="#FFF"
        android:textColor="#000"
        android:textCursorDrawable="@null"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_vertify"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/et_phone"
        app:layout_constraintRight_toRightOf="@+id/et_phone"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="#c7c2c2"
        app:layout_constraintTop_toBottomOf="@+id/et_phone"
        app:layout_constraintBottom_toTopOf="@+id/et_vertify"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"></LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        android:background="#c7c2c2"
        app:layout_constraintTop_toBottomOf="@+id/et_vertify"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_login"
        app:layout_constraintVertical_bias="0.184"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"></LinearLayout>

    <Button
        android:id="@+id/bt_verify"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:text="@string/login_getVerification"

        app:layout_constraintBaseline_toBaselineOf="@+id/et_vertify"
        android:layout_marginLeft="95dp"
        app:layout_constraintLeft_toLeftOf="@+id/et_vertify" />

    <!--android:onClick="verify"-->

</android.support.constraint.ConstraintLayout>
