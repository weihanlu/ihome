<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_estate_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_estate_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市海淀区西土城路"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_estate_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_estate_location"
        >

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_to_reserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预约"
        android:layout_below="@id/rv_estate_detail"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
