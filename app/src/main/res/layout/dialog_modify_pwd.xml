<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_old_pwd"
        android:text="旧密码"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        />

    <EditText
        android:id="@+id/et_old_pwd"
        android:hint="请输入6位密码"
        android:inputType="numberPassword"
        android:textSize="16sp"
        android:layout_toEndOf="@id/tv_old_pwd"
        android:layout_alignBaseline="@id/tv_old_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_new_pwd"
        android:text="新密码"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_old_pwd"
        android:layout_alignStart="@id/tv_old_pwd"
        />

    <EditText
        android:id="@+id/et_new_pwd"
        android:hint="请输入6位新密码"
        android:inputType="numberPassword"
        android:textSize="16sp"
        android:layout_toEndOf="@id/tv_new_pwd"
        android:layout_alignBaseline="@id/tv_new_pwd"
        android:layout_alignLeft="@id/et_old_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>